#!/bin/bash

set -e
set -u

APPMGR_HOME=$(dirname "$0")
APPMGR_HOME=$(cd "$APPMGR_HOME/.." && pwd)
export APPMGR_HOME

. "$APPMGR_HOME/lib/common"
# HEADER END

enabled=$(app-conf get app.enabled)

if [[ $enabled == "false" ]]
then
  echo "The app is disabled, refusing to start"
  exit 1
fi

exec "$APPMGR_HOME/libexec/app-operate" "restart" "$@"
