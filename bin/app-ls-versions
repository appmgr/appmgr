#!/bin/bash

set -e
set -u

APPMGR_HOME=$(dirname "$0")
APPMGR_HOME=$(cd "$APPMGR_HOME/.." && pwd)
export APPMGR_HOME

. "$APPMGR_HOME/share/appmgr/common"


usage_text() {
  echo "usage: $usage_app ls-versions"
}


assert_is_app

app_home=${APP_HOME-.}

app_versions=$(ls $app_home/versions)

installed_version=$(app-conf get app.installed_version)

pretty() {
  local current=$1
  shift
  for v in $*; do
    if [ $v = $current ]; then
      echo "$v (*)"
    else
      echo $v
    fi
  done
}

script() {
  local current=$1
  shift
  local versions=""
  for v in $*; do
    if [ $v != $current ]; then
      versions="${versions} $v"
    fi
  done
  echo $versions
}

is_pretty=0
while getopts "s" opt
do
  case $opt in
    s)
      is_pretty=1
      shift 1;
      ;;
    *)
      break
      ;;
  esac
done
shift $((OPTIND-1))

if [[ $is_pretty -eq 0 ]]; then
  pretty $installed_version $app_versions
else
  script $installed_version $app_versions
fi
